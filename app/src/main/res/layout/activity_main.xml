<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <com.ayst.tci.ThreeColorIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tci_min="0"
                app:tci_max="100"
                app:tci_firstColor="@color/red"
                app:tci_secondColor="@color/yellow"
                app:tci_thirdColor="@color/green"
                app:tci_progressHeight="20dp"
                app:tci_progressRadius="0px"
                app:tci_firstRange="30"
                app:tci_secondRange="20"
                app:tci_value="80"
                app:tci_firstText="Poor"
                app:tci_secondText="Fair"
                app:tci_thirdText="Good"
                app:tci_indicatorText="-20dBm"
                app:tci_indicatorTextColor="@android:color/white"
                app:tci_indicatorTextSize="12sp"
                app:tci_indicatorTextWidth="50dp"
                app:tci_indicatorTextHeight="12sp"
                app:tci_indicatorDrawable="@mipmap/ic_three_color_indicator"
                />

            <com.ayst.tci.ThreeColorIndicator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:tci_min="-50"
                app:tci_max="60"
                app:tci_firstColor="@color/blue"
                app:tci_secondColor="@color/orange"
                app:tci_thirdColor="@color/red"
                app:tci_progressHeight="20dp"
                app:tci_progressRadius="0px"
                app:tci_firstRange="33"
                app:tci_secondRange="33"
                app:tci_value="20"
                app:tci_firstText="Cold"
                app:tci_secondText="Warm"
                app:tci_thirdText="Hot"
                app:tci_indicatorText="20Â°C"
                app:tci_indicatorTextColor="@android:color/white"
                app:tci_indicatorTextSize="12sp"
                app:tci_indicatorTextWidth="50dp"
                app:tci_indicatorTextHeight="12sp"
                app:tci_indicatorDrawable="@mipmap/ic_three_color_indicator"
                />

            <com.ayst.tci.ThreeColorIndicator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:tci_min="0"
                app:tci_max="100"
                app:tci_firstColor="#9932cc"
                app:tci_secondColor="#ff69b4"
                app:tci_thirdColor="#ffc0cb"
                app:tci_progressHeight="10dp"
                app:tci_progressRadius="5dp"
                app:tci_firstRange="33"
                app:tci_secondRange="33"
                app:tci_value="40"
                app:tci_firstText="First"
                app:tci_secondText="Second"
                app:tci_thirdText="Third"
                app:tci_indicatorText="40%"
                app:tci_indicatorTextColor="@android:color/white"
                app:tci_indicatorTextSize="12sp"
                app:tci_indicatorTextWidth="50dp"
                app:tci_indicatorTextHeight="12sp"
                app:tci_indicatorDrawable="@mipmap/ic_three_color_indicator_2"
                />

            <com.ayst.tci.ThreeColorIndicator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:tci_min="0"
                app:tci_max="100"
                app:tci_firstColor="#3cb371"
                app:tci_secondColor="#32cb32"
                app:tci_thirdColor="#00fa9a"
                app:tci_progressHeight="10dp"
                app:tci_progressRadius="0px"
                app:tci_firstRange="40"
                app:tci_secondRange="40"
                app:tci_value="20"
                app:tci_firstText="First"
                app:tci_secondText="Second"
                app:tci_thirdText="Third"
                app:tci_indicatorText="20%"
                app:tci_indicatorTextColor="@android:color/white"
                app:tci_indicatorTextSize="12sp"
                app:tci_indicatorTextWidth="50dp"
                app:tci_indicatorTextHeight="12sp"
                app:tci_indicatorDrawable="@mipmap/ic_three_color_indicator_2"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="E-Mail: ayst.shen@foxmail.com"
                    android:textColor="@color/white_70"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WeChat: ayst_shen"
                    android:textColor="@color/white_70"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
